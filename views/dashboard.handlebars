<div class="card">
    {{#if isLoggedin}}
    <h2 class="card-header"></h2>
    <form id="user-form" class="card-body">
        <!-- Title -->
        <label class="form-label" for="title">Title</label>
        <input name="title" id="title" type="text" autofocus="true" class="form-input" />
        <!-- Content -->
        <label class="form-label" for="content">Content</label>
        <textarea class="form-input" name="content" id="content" autofocus="true" rows="5"></textarea>
        <!-- Button -->
        <button type="submit" id="submit" class="create-post-btn">Create!</button>
    </form>
    {{/if}}
</div>